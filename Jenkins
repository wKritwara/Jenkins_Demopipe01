pipeline {
    agent {
        docker {
            image 'python:3.11'  // Docker image
            args '-v /var/run/docker.sock:/var/run/docker.sock'  // optional if Docker CLI is needed
        }
    }
    environment {
        SONARQUBE = credentials('sonarqube-token')  // store your SonarQube token in Jenkins
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/wKritwara/Jenkins_Demopipe01.git'
            }
        }
        
        stage('Setup venv') {
            steps {
                script {
                    sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    pip install pysonar   # Install pysonar here
                    '''
                }
            }
        }
        
        stage('Run Tests & Coverage') {
            steps {
                script {
                    sh '''
                    . venv/bin/activate
                    venv/bin/pytest --maxfail=1 --disable-warnings -q --cov=app --cov-report=xml
                    '''
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    sh '''
                    . venv/bin/activate
                    pysonar \
                      --sonar-host-url=http://localhost:9000 \
                      --sonar-token=${SONARQUBE} \
                      --sonar-project-key=demoapi \
                      --sources .
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t fastapi-app:latest .'
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    sh 'docker run -d -p 8000:8000 fastapi-app:latest'
                }
            }
        }
    }
    post {
        always {
            echo "Pipeline finished"
        }
    }
}
